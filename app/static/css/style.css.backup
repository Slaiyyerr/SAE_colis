/* Anciennes grilles dashboard supprimées */

/* Destination */
.destination-card {
    background: linear-gradient(135deg, var(--navbar) 0%, var(--primary) 100%);
    color: white;
    margin-bottom: 20px;
}

.destination-card h2 { margin: 0 0 10px 0; color: white; }

.destination-grid {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 20px;
    align-items: center;
}

.destination-icon { font-size: 64px; }
.destination-name { font-size: 24px; font-weight: bold; margin-bottom: 5px; }
.destination-place { font-size: 18px; opacity: 0.9; }
.destination-contact { margin-top: 10px; font-size: 16px; }

.destination-info { font-size: 12px; color: #666; }
.destination-demandeur { font-size: 12px; color: var(--primary); }
.destination-unknown-text { color: var(--danger); }

.destination-unknown {
    background: #fee2e2;
    border: 2px solid var(--danger);
}

.destination-unknown h3 { color: var(--danger); margin: 0; }

/* Search */
.search-form { display: flex; gap: 10px; }
.search-input-large {
    flex: 1;
    padding: 15px;
    font-size: 16px;
    border: 2px solid #ddd;
    border-radius: 5px;
}

.search-btn-large { padding: 15px 30px; }

/* Notifications */
.notification-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.notification-item {
    padding: 15px;
    border-bottom: 1px solid #eee;
}

.notification-item.unread { background: #f0f9ff; }

.notification-content {
    display: flex;
    justify-content: space-between;
    align-items: start;
}

.notification-main { flex: 1; }

.notification-meta {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 5px;
}

.notification-indicator {
    width: 8px;
    height: 8px;
    background: var(--primary);
    border-radius: 50%;
}

.notification-date { color: #666; font-size: 13px; }
.notification-message { margin: 0; color: #444; }

.notification-actions { display: flex; gap: 10px; align-items: center; }
.notification-form { margin: 0; }

.notification-empty {
    text-align: center;
    padding: 40px;
    color: #666;
}

.notification-empty-icon { font-size: 48px; margin-bottom: 10px; }

/* Auth */
.auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
}

.auth-card {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    width: 100%;
    max-width: 400px;
    text-align: center;
}

.auth-card h1 { margin-bottom: 0.5rem; color: var(--navbar); }
.auth-card p { color: var(--text-muted); margin-bottom: 1.5rem; }
/* Anciennes classes auth et formulaires supprimées */

.auth-info { text-align: left; background: #f9fafb; }
.auth-accounts { margin-top: 0.5rem; padding-left: 1.25rem; font-size: 0.875rem; }
.auth-password { margin-top: 0.5rem; font-size: 0.875rem; color: var(--text-muted); }

/* Anciennes classes formulaires supprimées */

/* Grids spécifiques */
.bl-colis-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 40px;
    gap: 10px;
    margin-bottom: 10px;
    align-items: end;
    padding: 15px;
    background: #f9fafb;
    border-radius: 5px;
}

.form-ligne-grid {
    display: grid;
    grid-template-columns: 150px 1fr 80px 40px;
    gap: 10px;
    margin-bottom: 10px;
    align-items: end;
}

/* Stats personnalisées */
.stats-custom-grid { grid-template-columns: repeat(4, 1fr); }
.stat-center { text-align: center; }
.stat-large { font-size: 18px; }

/* Confirm delete */
.confirm-delete-card { max-width: 500px; margin: 50px auto; }
.confirm-delete-content { text-align: center; padding: 20px; }
.confirm-delete-icon { font-size: 48px; color: var(--danger); margin-bottom: 20px; }
.confirm-delete-title { color: var(--danger); margin-bottom: 20px; }
.confirm-delete-message { font-size: 16px; margin-bottom: 15px; }
.confirm-delete-warning {
    background: #fef2f2;
    color: #991b1b;
    padding: 10px;
    border-radius: 5px;
    font-size: 14px;
}
.confirm-delete-actions {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 30px;
}

/* Scan placeholder */
.scan-placeholder {
    background: #e5e7eb;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
}

.scan-placeholder-content { text-align: center; color: #6b7280; }
.scan-placeholder-icon { font-size: 4rem; }

/* Notes */
.notes-display {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 5px;
    white-space: pre-wrap;
}

/* File info */
.file-info {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    background: #f3f4f6;
    border-radius: 5px;
    margin-top: 5px;
}

.file-info a { color: var(--primary); text-decoration: none; }
.file-info a:hover { text-decoration: underline; }

/* Actions verticales */
.actions-verticales {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

/* ===========================================
   AUTHENTIFICATION
   =========================================== */
.auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--auth-principale);
    padding: 20px;
}

.auth-card {
    background: var(--auth-secondaire);
    border: 1px solid var(--bordure);
    border-radius: 12px;
    padding: 40px;
    width: 100%;
    max-width: 400px;
    box-shadow: var(--ombre);
}

.auth-card h1 {
    color: var(--auth-texte);
    font-size: 28px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 8px;
}

.auth-card p {
    color: var(--auth-info-texte);
    text-align: center;
    margin-bottom: 30px;
}

.auth-card .form-groupe {
    margin-bottom: 20px;
}

.auth-card .form-groupe label {
    display: block;
    color: var(--auth-texte);
    font-weight: 500;
    margin-bottom: 8px;
}

.auth-card .form-groupe .input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--bordure);
    border-radius: 8px;
    background: var(--auth-secondaire);
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    transition: border-color 0.2s ease;
}

.auth-card .form-groupe .input:focus {
    outline: none;
    border-color: var(--principal);
    box-shadow: 0 0 0 3px rgba(12, 29, 60, 0.1);
}

.auth-info {
    background: var(--auth-info);
    border: 1px solid var(--bordure);
    border-radius: 8px;
    padding: 16px;
    margin-top: 20px;
}

.auth-info strong {
    color: var(--auth-texte);
    font-weight: 600;
}

.auth-accounts {
    list-style: none;
    padding: 0;
    margin: 12px 0;
}

.auth-accounts li {
    color: var(--auth-info-texte);
    font-size: 13px;
    margin-bottom: 6px;
    padding: 6px 0;
    border-bottom: 1px solid var(--bordure);
}

.auth-accounts li:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.auth-accounts code {
    background: var(--auth-secondaire);
    border: 1px solid var(--bordure);
    border-radius: 4px;
    padding: 2px 6px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 12px;
    color: var(--auth-texte);
}

.auth-password {
    color: var(--auth-info-texte);
    font-size: 13px;
    margin: 12px 0 0 0;
}

.auth-password code {
    background: var(--auth-secondaire);
    border: 1px solid var(--bordure);
    border-radius: 4px;
    padding: 2px 6px;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 12px;
    color: var(--auth-texte);
}

/* ===========================================
   FORMULAIRES ET BOUTONS
   =========================================== */
/* Tables - remplacés par .tableau */

/* Formulaires - remplacés par .formulaire, .form-groupe, .input */

/* Boutons */
.bouton {
    background: var(--secondaire);
    color: var(--bouton-details-texte);
    border: none;
    padding: 10px 20px;
    border-radius: var(--radius);
    font-weight: 500;
    font-size: 14px;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s ease;
}

.bouton:hover {
    background: var(--principal-hover);
    transform: translateY(-1px);
}

.bouton.correct {
    background: var(--correct);
    color: white;
}

.bouton.danger {
    background: var(--danger);
    color: white;
}

.bouton.moyen {
    background: var(--moyen);
    color: var(--texte);
}

/* Badges */
.badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
}

.badge.correct {
    background: var(--correct);
    color: white;
}

.badge.moyen {
    background: var(--moyen);
    color: var(--texte);
}

.badge.danger {
    background: var(--danger);
    color: white;
}

/* ===========================================
   RESPONSIVE
   =========================================== */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        height: auto;
        padding: 10px;
    }
    
    .navbar-nav {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .stats-custom-grid { grid-template-columns: repeat(2, 1fr); }
    /* Anciennes grilles responsive supprimées */
    .destination-grid { grid-template-columns: 1fr; text-align: center; }
    .notification-content { flex-direction: column; gap: 10px; }
    .notification-actions { justify-content: center; }
    .search-form { flex-direction: column; }
    .flex-between { flex-direction: column; align-items: flex-start; }
}

@media (max-width: 480px) {
    .stats-custom-grid { grid-template-columns: 1fr; }
    .container { padding: 10px; }
    /* Ancienne classe card responsive supprimée */
}
